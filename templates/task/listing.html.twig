{% extends 'base.html.twig' %}

{% block title %}Hello TaskController!{% endblock %}

{% block stylesheets %}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">

{% endblock %}

{% block javascripts %}

<script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
<script type="text/javascript">
    $(document).ready(function() {
        $('#example').DataTable();
    } );
</script>

{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Les tâches</h1>
    <a class="" href="{{ path('app_logout')}}">Déconnexion</a><br>
    <a class="" href="{{ path('task_create')}}">Ajouter une tâche</a><br>
    <table id="example" class="table table-dark table-striped">
        <thead>
            <tr>
                {# <th>ID</th> #}
                <th>Nom</th>
                <th>Description</th>
                <th>Date effective</th>
                <th>Priorité</th>
                <th>Catégorie</th>
                <th></th>
                <th></th>
                
            </tr>
        </thead>
        <tbody>
            {% for task in tasks %}
            <tr>
                {# <td>{{task.getIdTask()}}</td> #}
                <td>{{task.getNameTask()}}</td>
                <td>{{task.getDescriptionTask()}}</td>
                <td>{{task.getDueDateTask().format('Y-m-d H:i')}}</td>
                <td>{{task.getPriorityTask()}}</td>
                <td>{{task.getCategory().getLibelleCategory()}}</td>
                <td><a href="{{ path('task_edit', {'id': task.getIdTask()})}}"><button class="btn btn-success">Editer</button></a></td>
                <td><a href="{{ path('task_delete', {'id': task.getIdTask()})}}"><button class="btn btn-danger" href="">Supprimer</button></a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}